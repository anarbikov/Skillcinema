<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingEnd="6dp"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/actorImageView"
        android:layout_width="49dp"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/actorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/actorImageView"
        app:layout_constraintBottom_toBottomOf="@id/actorImageView"
        app:layout_constraintStart_toEndOf="@id/actorImageView"
        app:layout_constraintVertical_bias="0.3"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/actorNickTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actorNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/actorImageView"
        app:layout_constraintStart_toEndOf="@id/actorImageView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
